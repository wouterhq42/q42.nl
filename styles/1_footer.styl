@import "0_variables.styl"

#footer
  padding 16px 0
  background #222
  color #eee
  fontSmoothing antialiased

  section
    width 940px
    margin 0 auto

  p
    font-size .9rem
    span
      display block
      span
        display inline

  a
    color #88c546
    text-decoration underline

  h2
    font-family bodyFont
    text-transform uppercase
    letter-spacing 1px
    font-size 18px

  .block-large
    padding 32px 0

  .iconList
    padding 0
    a
      displayFlex()
      alignItems center
      transition color .3s ease
      color #eee
      text-decoration none
      &:hover
        color #88c546

#facebookLikeBox
  overflow hidden
  opacity 0
  transition ease-in-out .2s
  & > div:nth-child(1)
    min-width 100%
    min-height 160px
    margin-top -42px
  & > div:nth-child(2)
    margin-top 30px
  &.visible
    opacity 1

