@import "0_variables.styl"

#header
  width 100%
  position relative
  margin 0 auto
  background-color rgb(39, 127, 168)
  transition ease-in-out .3s
  fontSmoothing antialiased
  &.cover
    position fixed
    z-index 9999
    height 100%
  nav
    li:first-child
      display none

#particles
  position absolute
  top 0
  width 100%
  height 100%
  z-index 2
  overflow hidden
  pointer-events none
  opacity .25
  perspective 2000px

  .particle
    position absolute
nav
  .pos
    displayFlex()
    flexDirection column
    alignItems center
    position relative
    width 100%
    height 100%
    z-index 4
    padding 16px 0
  ul
    displayFlex()
    justifyContent center
    list-style none
    margin 16px 0
    padding 0
    li
      display inline-block
      margin 0 8px
      font bold .8rem bodyFont
      text-transform uppercase
      a
        color #fff
        text-shadow 0 1px rgba(0,0,0,.3)
        text-decoration none
        letter-spacing 1px
        fontSmoothing antialiased
        &:hover, &.selected
          color #fff
          text-decoration none
          border-bottom solid 1px rgba(255,255,255,.8)

#mobile-menu-icon
  display none

// OJOO
#headergame
  width 100%
  height 100%
  position absolute
  z-index 1
  top 0

.q42-logo a
  position relative
  z-index 20
  pointer-events all
#header .pos
  pointer-events none

#header nav ul li
  position relative
  z-index 20
  pointer-events all

#header #mobile-menu-icon
  pointer-events all

#toggle-fullscreen
  position absolute
  top 7rem
  right 1rem
  z-index 6
  border-radius 50%
  width 32px
  height 32px
  line-height 32px
  text-align center
  cursor pointer
  background white

.fullscreen #header
  displayFlex()
  flexDirection column
  justifyContent center
  transition height ease .25s
