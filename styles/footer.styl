@import "variables.styl"

#footer
  background #222
  color rgba(255,255,255,.9)
  -webkit-font-smoothing antialiased
  font-size .9rem
  font-weight 400

  .fn
    display none

  .block-large
    margin 0 auto
    @media (min-width 941px)
      width 940px
    @media (max-width 620px)
      flex-direction column

  a
    color #88c546
    border-bottom-color transparent
    &:hover
      border-bottom-color rgba(207, 239, 173, 0.3)

  h2, h3
    smallcaps()
    font-style italic
    font-size 20px
    margin-top 0
  h3
    color white
    font-size 12px
    margin 0

  ul
    list-style none
    margin 0
    padding 0
  li
    margin 0 0 .3rem 0

  .note.kvk
    color rgba(255,255,255,.3)

  .q42-logo q42
    width 42px
    height 60px

  .block-large
    padding 32px 0
    border-bottom solid 1px rgba(255,255,255,.3)
    @media (max-width 940px)
      width 90%

  .block-small
    &:not(:last-child)
      margin-right 20px
      border-right none
      @media (max-width 620px)
        margin-right 0
    & > .body
      padding 32px 0

  .block-full
    padding 2rem 0

    p
      font-size .8rem
      color rgba(255,255,255,.7)
      line-height 2rem

    a
      text-decoration none
      color rgba(255,255,255,.7)
      white-space nowrap
      border-bottom none
      &:not(:last-child)
        margin 0 1rem 0 0
      &:hover
        color white

    .fa
      vertical-align middle
