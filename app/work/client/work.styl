@import "../../../styles/0_variables.styl"

.work-tags
  flex 1
  background white
  ul
    list-style none
    padding 0
    margin 0
    padding 12px
  li
    line-height 2.5rem
    display inline
  a
    padding .3rem 1rem
    background-color #f0f0f0
    font-style italic
    margin 0 .2rem 0 0
    border-bottom none
    &:hover
      background-color #eee
    &.selected
      background-color #ffc
